component PlayerStats {
   list<Stat> Values;
}

enum StatType {
    AttackDamage,
    AttackRange,
    MovementSpeed
}

struct Stat {
    StatType Type;
    Int32 Level;
    FP UpgradeStep;
    FP Value;
    FP DefaultValue;
    FP Chance;
    [HideInInspector] Boolean LimitMaxLevel;
    [Optional("LimitMaxLevel")] Int32 MaxLevel;

}